<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--未聚焦-->
    <item android:drawable="@drawable/icon_recognition" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@drawable/icon_recognition_press" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>
    <!--聚焦-->
    <item android:drawable="@drawable/icon_recognition" android:state_focused="true" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@drawable/icon_recognition_press" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>
    <!--按压-->
    <item android:drawable="@drawable/icon_recognition" android:state_pressed="true" android:state_selected="true"/>
    <item android:drawable="@drawable/icon_recognition_press" android:state_pressed="true"/>

</selector>